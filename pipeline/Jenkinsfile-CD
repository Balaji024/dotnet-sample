@Library('shared-library-dotnet') _
pipeline {
  agent any
  
   environment {
    azcon = credentials('azure-pasha')
  }
   
   stages {       
    stage('Download Artifact From Nexus') {
      steps {
        DownloadFromNexus()
      }
      }
    stage('Fetch Public IP') {
      steps {
        FetchPublicIP()
      }
      }
    stage('Stop IIS') {
      steps {
        SetupTarget()
      }
      }
    stage('DeployToIIS') {   
      steps{
        DeployToIIS()
       }
       }
     stage('Start IIS') {
      steps {
        StartIIS()
        cleanWs()
      }
      }
    }
}
