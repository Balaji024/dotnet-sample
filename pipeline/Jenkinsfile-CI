@Library('shared-library') _
pipeline {
    agent any
    
    environment {
       sonarlogin = credentials('sonar_token')
       nexuslogin = credentials('nexus-login')
       }
    
    
    stages {
      
       stage('Dotnet Build') {
           steps {
               BuildApp()               
           }
           }
        stage('Sonar Analysis') {
           steps {
               SonarApp(sonarlogin)               
           }
        }
        stage('Store war to Nexus') {
           steps {
               StoreToNexus($nexuslogin.username, $nexuslogin.password, env.BUILD_NUMBER)               
           }
           }
        
    }
}  
